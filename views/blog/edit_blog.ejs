<%-include('../partials/header', {page_title:"Edit Movie"})-%>
<%- include('../partials/navbar', {allPosts: blogs}); %>


<br>
<h2>Update <%= blog.title %></h2>
<img src='../<%= blog.image %>' height="200"></img>

<form action="/blog/<%= blog.id%>?_method=PUT" method="POST">
<ol>

	<li>
		title: <input type="text" name="title" value="<%= blog.title %>">
	</li>
	<li>
		image link: <input type="text" name="image" value="<%= blog.image %>">
	</li>
	<li>
		date: <input type="text" name="date" value="<%= blog.date %>">
	</li>
	<li>
		author: <input type="text" name="author" value="<%= blog.author %>">
	</li>
	<li>
		preview content: <input type="text" name="previewContent" value="<%= blog.previewContent %>">
	</li>
	<li>
		content 1/2: <input type="text" name="content_1" value="<%= blog.content[0] %>">
	</li>
	<li>
		content 2/2: <input type="text" name="content_2" value="<%= blog.content[1] %>">
	</li>
	<li>
		winks: <input type="text" name="winks" value="<%= blog.winks %>">
	</li>
	<li class = "hidden">
		comments: <input type="object" name="comments" value="<%= blog.comments %>">
	</li>

</ol>
	<button>Update Blog</button>
</form>


<%-include('../partials/footer')-%>
