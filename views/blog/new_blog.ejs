<%- include('../partials/header', {page_title: "MCU: Create Blog"}); %>
<%- include('../partials/navbar', {posts: allPosts}); %>

<div id = "create-blog-body" class="container-fluid">
  <div class="row">
    <div class="col-3">
    </div>
    <div class="col-6">
      <h1 class = "text-center" >Create Your Own Blog!</h1>

      <form class = "text-center" action="/blogs"  method="post">
        <label for="title">Title:</label><br>
        <input required type="text" id="title" name="title"><br>
        <br>

        <label for="photoLink">Photo Link:</label><br>
        <input required type="url" id="photoLink" name="photoLink"><br>
        <br>

        <% let authors = ["Tony Stark", "Steve Rogers", "Bruce Banner", "Peter Parker"]; %>
        <label for="author">Author:</label><br>
        <select name="author" id="author">
          <% for (let author of authors) {%>
            <option value="<%=author%>"><%=author%></option>
          <%}%>
        </select>
        <br></br>

        <label for="previewContent">Preview Content:</label><br>
        <input required type="previewContent" id="previewContent" name="previewContent"><br>
        <br>

        <label for="content1">Content Paragraph 1/2:</label><br>
        <input required type="content1" id="content1" name="content1"><br>
        <br>

        <label for="content2">Content Paragraph 2/2:</label><br>
        <input required type="content2" id="content2" name="content2"><br>
        <br>


        <input required type="submit" value="Submit">
        <br></br>
      </form>
    </div>
    <div class="col-3">
    </div>
  </div>
</div>



<%- include('../partials/footer'); %>
