<%-include('../partials/header', {page_title:"All Films"})-%>
<%- include('../partials/navbar', {allPosts: blogs}); %>



<div id = "index-body" container">
	<br></br>
	<div class="row">
	<% Object.keys(films).forEach(function(key, i){ %>
		<div class="col-md-4">
		<img src='<%= films[key].poster %>' width ="50%"></img>
		<h3><a href="/film/<%= key %>"> <%= films[key].title %></a></h3>

		<form action="/film/<%= key %>/edit" method="GET">
		  <button>Update Movie</button>
		</form>

		<form action="/film/<%= key %>?_method=DELETE" method="POST">
		  <button>Delete Movie</button>
		</form>
		</div>
	    <%if ((i+1)%3==0 && i!=0){ %>
	       </div> <!-- end the row div-->
	           <div class="row">
	        <% } %>

		<% }) %>
	    </div> <!--last row -->
	    <br>
	<h2> Want to add a new film to the collection?</h2>
	<form class = "text-center" action="/film/create" method="GET">
		<input type="text" name= "title" placeholder="Enter title to add...">
		<button>Search for Movie</button>
	</form>
	<br>
</div>


<%-include('../partials/footer')-%>
