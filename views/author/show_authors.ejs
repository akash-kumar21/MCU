<%-include('../partials/header', {page_title:"All Authors"})-%>
<%- include('../partials/navbar', {allPosts: allPosts}); %>

<div id = "index-body" container">
  <br>
  <h1 class = "text-center"> All Authors </h1>

  <br></br>

  <div class="row text-center">
  <% let i = 0; %>
  <% for (author of Object.values(authors)) {%>
    <% let filename = author.linkName.replace(/ /g, "-"); %>
  	<div class="col-4">
      <div class="card text-center " style="width: 18rem;">
        <img class="card-img-top" src="<%=author.photoURL%>" alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title"><%=author.name%></h5>
          <p class="card-text"><%=author.quote%></p>
          <a href="author/<%=filename%>" class="btn btn-primary">Link</a>
        </div>
      </div>

  	<!--<form action="/author/<%= filename %>/edit" method="GET">
  	  <button>Update Blog</button>
  	</form>-->

  	<!--<<form action="/author/<%= filename %>?_method=DELETE" method="POST">
  	  <button>Delete Blog</button>
  	</form>-->


  	</div>
      <%if ((i+1)%3==0 && i!=0){ %>
    </div> <!-- end the row div-->
    <br></br>
    <div class="row text-center">
      <% } %>
      <% i++; %>
  	<% } %>
      </div> <!--last row -->
      <br>

</div>

<%-include('../partials/footer')-%>
