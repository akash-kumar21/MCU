<%- include('global/header', {title: "MCU: Create Blog"}); %>
<%- include('global/navbar', {posts: allPosts}); %>

<div id = "create-blog-body" class="container-fluid">
  <div class="row">
    <div class="col-3">
    </div>
    <div class="col-6">
      <h1 class = "text-center" >Create Your Own Blog!</h1>

      <form class = "text-center" action="/blogs"  method="post">
        <label for="title">Title:</label><br>
        <input required type="text" id="title" name="title"><br>
        <br>

        <label for="photoLink">Photo Link:</label><br>
        <input required type="url" id="photoLink" name="photoLink"><br>
        <br>

        <% let authors = ["Tony Stark", "Steve Rogers", "Bruce Banner", "Peter Parker"]; %>
        <label for="author">Author:</label><br>
        <select name="author" id="author">
          <% for (let author of authors) {%>
            <option value="<%=author%>"><%=author%></option>
          <%}%>
        </select>
        <br></br>

        <label for="previewContent">Preview Content:</label><br>
        <input required type="previewContent" id="previewContent" name="previewContent"><br>
        <br>

        <label for="content1">Content Paragraph 1/2:</label><br>
        <input required type="content1" id="content1" name="content1"><br>
        <br>

        <label for="content2">Content Paragraph 2/2:</label><br>
        <input required type="content2" id="content2" name="content2"><br>
        <br>

        <label for="tag_content_1">Tag Content 1/3:</label><br>
        <input required type="tag_content_1" id="tag_content_1" name="tag_content_1"><br>
        <br>

        <label for="tag_style_1">Tags Style 1/3 (primary (dark blue), secondary (gray), success (green), danger (red), warning (yellow), info (light blue), light (white), dark (black)):</label><br>
        <input required type="tag_style_1" id="tag_style_1" name="tag_style_1"><br>
        <br>

        <label for="tag_content_2">Tag Content 2/3:</label><br>
        <input required type="tag_content_2" id="tag_content_2" name="tag_content_2"><br>
        <br>

        <label for="tag_style_2">Tags Style 2/3 (primary (dark blue), secondary (gray), success (green), danger (red), warning (yellow), info (light blue), light (white), dark (black)):</label><br>
        <input required type="tag_style_2" id="tag_style_2" name="tag_style_2"><br>
        <br>

        <label for="tag_content_3">Tag Content 3/3:</label><br>
        <input required type="tag_content_3" id="tag_content_3" name="tag_content_3"><br>
        <br>

        <label for="tag_style_3">Tags Style 3/3 (primary (dark blue), secondary (gray), success (green), danger (red), warning (yellow), info (light blue), light (white), dark (black)):</label><br>
        <input required type="tag_style_3" id="tag_style_3" name="tag_style_3"><br>
        <br>

        <input required type="submit" value="Submit">
        <br></br>
      </form>
    </div>
    <div class="col-3">
    </div>
  </div>
</div>



<%- include('global/footer'); %>
