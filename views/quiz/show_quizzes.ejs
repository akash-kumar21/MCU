<%-include('../partials/header', {page_title:"All Quizzes"})-%>
<%- include('../partials/navbar', {allPosts: allPosts}); %>

<div id = "index-body" container">
  <br>
  <h1 class = "text-center"> All Quizzes </h1>

  <br></br>

  <div class="row text-center">
  <% let i = 0; %>
  <% for (quiz of Object.values(quizzes)) {%>
    <% let filename = quiz.title.replace(/ /g, "-"); %>
  	<div class="col-4">
      <div class="card text-center " style="width: 18rem;">
        <img class="card-img-top" src="<%=quiz.photoURL%>" alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title"><%=quiz.title.replace("-", " ")%></h5>
          <a href="quiz/<%=filename%>" class="btn btn-primary">Link</a>
        </div>
      </div>



  	</div>
      <%if ((i+1)%3==0 && i!=0){ %>
    </div> <!-- end the row div-->
    <br></br>
    <div class="row text-center">
      <% } %>
      <% i++; %>
  	<% } %>
      </div> <!--last row -->
      <br>

</div>

<%-include('../partials/footer')-%>
